<% include ../partials/header %>
<div class="container">
    <h1>This is the list page where all the camps are listed</h1>
</div>
<div class="container">
    <div class="row">
        <% camps.forEach(function(camp){  %>
        <div class="col-md-4">
            <div class="card">
                <img src="<%=camp.imageUrl %>" class="card-img">
                <div class="card-body">
                    <h3 class="card-title">
                        <%= camp.campName %>
                    </h3>
                    <a href="/camps/<%= camp._id %>" class="card-link">View this camp</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>